---
import PlaywrightIcon from '../../assets/svgs/technologies/playwright-svg'
import ReactNativeIcon from '../../assets/svgs/technologies/react-native-svg'
import FigmaIcon from '../../assets/svgs/technologies/figma-svg'
import AngularIcon from '../../assets/svgs/technologies/angular-svg'
import Heading from '../Heading.astro'
import NextStepsElement from './NextStepsElement.astro'
---

<div>
	<Heading title="Next steps" type="h2">Next steps</Heading>

	<div class="flex justify-center">
		<div class="flex w-fit flex-col justify-center gap-8">
			<NextStepsElement title="Angular" tech="angular">
				<AngularIcon />
			</NextStepsElement>

			<NextStepsElement title="React Native" tech="react-native">
				<ReactNativeIcon />
			</NextStepsElement>

			<NextStepsElement title="Figma" tech="figma">
				<FigmaIcon />
			</NextStepsElement>
		</div>
	</div>
</div>
