			</TechnologiesSubCont>

			<TechnologiesSubCont title="Databases">
				<TechnologyCont title="MongoDB">
					<MongodbIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="Mongoose">
					<MongooseIcon width={width} height={height} />
				</TechnologyCont>
			</TechnologiesSubCont>

			<TechnologiesSubCont title="Testing">
				<TechnologyCont title="RTL">
					<ReactTestingIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="Jest">
					<JestIcon width={width} height={height} />
				</TechnologyCont>
			</TechnologiesSubCont>

			<TechnologiesSubCont title="Backend Services">
				<TechnologyCont title="Appwrite">
					<AppwriteIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="Socket.IO">
					<SocketIOIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="Clerk">
					<ClerkSvg width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="Convex">
					<ConvexIcon width={width} height={height} />
				</TechnologyCont>
			</TechnologiesSubCont>
		</div>
	</div>
</div>
