import ConvexIcon from '../../assets/svgs/technologies/convex-svg'
import CssSvg from '../../assets/svgs/technologies/css-svg'
import JavascriptIcon from '../../assets/svgs/technologies/javascript-svg'
import CIcon from '../../assets/svgs/technologies/c-svg'
import MongodbIcon from '../../assets/svgs/technologies/mongodb-svg'
import MongooseIcon from '../../assets/svgs/technologies/mongoose-svg'
import NextjsIcon from '../../assets/svgs/technologies/nextjs-svg'
import NodejsIcon from '../../assets/svgs/technologies/nodejs-svg'
import ReactIcon from '../../assets/svgs/technologies/react-svg'
import SassIcon from '../../assets/svgs/technologies/sass-svg'
import ShadcnIcon from '../../assets/svgs/technologies/shadcn-svg'
import StorybookIcon from '../../assets/svgs/technologies/storybook-svg'
import TailwindIcon from '../../assets/svgs/technologies/tailwind-svg'
import TypescriptSvg from '../../assets/svgs/technologies/typescript-svg'
import ReactQueryIcon from '../../assets/svgs/technologies/react-query-svg'
import ReactTestingIcon from '../../assets/svgs/technologies/react-testing-svg'
import BootstrapIcon from '../../assets/svgs/technologies/bootstrap-svg'
import JQueryIcon from '../../assets/svgs/technologies/jquery-svg'
import JestIcon from '../../assets/svgs/technologies/jest-svg'
import StyledIcon from '../../assets/svgs/technologies/styled-components-svg'
import SocketIOIcon from '../../assets/svgs/technologies/socketio-svg'
import TechnologiesSubCont from './TechnologiesSubCont.astro'
import Heading from '../Heading.astro'
import TechnologyCont from './TechnologyCont.astro'
import TechElement from '../projects/TechElement'

const width = 50
const height = 50
---

<div>
	<Heading title="Technologies" type="h2" />
	<div class="flex items-center justify-center">
		<div class="flex max-w-[700px]
		flex-wrap
		items-center
		justify-center
		gap-6">
			<TechnologiesSubCont title="Languages">
				<TechnologyCont title="JavaScript">
					<JavascriptIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="C">
					<CIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="TypeScript">
					<TypescriptSvg width={width} height={height} />
