			</TechnologiesSubCont>

			<TechnologiesSubCont title="Frameworks and Libraries">
				<TechnologyCont title="React">
					<ReactIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="NextJS">
					<NextjsIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="NodeJS">
					<NodejsIcon width={width} height={height} />
				</TechnologyCont>

				<TechnologyCont title="Astro">
					<AstroIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="React Query">
					<ReactQueryIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="jQuery">
					<JQueryIcon width={width} height={height} />
				</TechnologyCont>
			</TechnologiesSubCont>

			<TechnologiesSubCont title="Styling">
