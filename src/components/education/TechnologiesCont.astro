					<CssSvg width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="Tailwind">
					<TailwindIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="Sass">
					<SassIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="Shadcn">
					<ShadcnIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="Storybook">
					<StorybookIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="Bootstrap">
					<BootstrapIcon width={width} height={height} />
				</TechnologyCont>
				<TechnologyCont title="Styled Comp">
					<StyledIcon width={width} height={height} />
